{
  "name": "ae-scripting-setup",
  "version": "1.0.0",
  "description": "Setup for writing After Effects scripts in TypeScript",
  "main": "dist/script.jsx",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=es5 --outfile=dist/script.jsx",
    "dev": "rollup -cw",
    "release": "npm run build && gh release create $npm_package_version $npm_package_main"
  },
  "author": "Tim Haywood",
  "license": "MIT",
  "dependencies": {
    "aequery": "^0.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.5",
    "esbuild": "^0.12.28",
    "rollup": "^2.56.3",
    "tslib": "^2.3.1",
    "types-for-adobe": "^6.0.1",
    "typescript": "^4.4.3"
  }
}
